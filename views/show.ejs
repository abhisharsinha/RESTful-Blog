<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    <%= blog.title %>
  </div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %>">
      <div class="content">
        <div class="ui equal width grid">
          <div class="left floated column">
            <span><%= blog.created.toDateString() %></span>
          </div>
        <div class="right aligned column">
            <span><%= blog.author.username %></span>
          </div>
        </div>
      </div>
      <div class="description">
        <p><%- blog.body %></p>
      </div>
      <hr>
      <a href="/blogs/<%=blog._id%>/edit" class="ui button orange basic">Edit</a>
      <form class="ui form" id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
        <button type="submit" class="ui red basic button">
          Delete
        </button>
      </form>
    </div>
  </div>
</div>


<% include partials/footer %>
