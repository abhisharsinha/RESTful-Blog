<% include partials/header %>

<div class="ui main text container">
  <div class="ui huge header">
    RESTful Blog
  </div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog){ %>
        <div class="item">
          <div class="image">
            <img src="<%= blog.image %>" alt="<%= blog.title %>">
          </div>
          <div class="content">
            <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
            <div class="ui equal width grid">
              <div class="left floated column">
                <div class="meta">
                  <span class="meta"><%= blog.author.username %></span>
                </div>
              </div>
              <div class="right aligned column">
                <div class="meta">
                  <span class="meta"><%= blog.created.toDateString() %></span>
                </div>
              </div>
            </div>
            <div class="description">
              <p><%- blog.body.substring(0, 100) %>...</p>
            </div>
            <div class="extra">
              <a href="/blogs/<%= blog._id %>" class="ui floated basic violet button">Read More <i class="right chevron icon"></i></a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<% include partials/footer %>
